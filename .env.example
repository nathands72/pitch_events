# API Keys
OPENAI_API_KEY=your_openai_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here
OPENAI_BASE_URL=your_openai_base_url_here (optional)

# Platform APIs
EVENTBRITE_API_KEY=your_eventbrite_key_here
MEETUP_API_KEY=your_meetup_key_here
# LINKEDIN_API_KEY=your_linkedin_key_here
# FACEBOOK_ACCESS_TOKEN=your_facebook_token_here

# Vector Database (choose one)
# For Chroma (local)
CHROMA_PERSIST_DIR=./data/chroma

# For Pinecone (managed)
# PINECONE_API_KEY=your_pinecone_key_here
# PINECONE_ENVIRONMENT=your_environment_here
# PINECONE_INDEX_NAME=pitch-events

# For Weaviate
# WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=your_weaviate_key_here

# Redis (for task queue)
REDIS_URL=redis://localhost:6379/0

# Application Settings
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4-turbo-preview
SEARCH_MAX_RESULTS=50
VECTOR_DB_TYPE=chroma  # chroma, pinecone, weaviate
CACHE_TTL_MINUTES=30

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true
